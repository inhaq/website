---
import Shimmer from "./Shimmer";
import { Image } from "astro:assets";
import profilePic from "../img/profile1.jpeg";
---

<section id="about" class="text-white pb-20 max-w-screen-3xl scroll-mt-[120px]">
  <Shimmer client:visible>
    <Image
      src={profilePic}
      alt="Profile picture"
      class="rounded-3xl mx-auto max-w-80 max-h-80"
    />
  </Shimmer>
</section>
